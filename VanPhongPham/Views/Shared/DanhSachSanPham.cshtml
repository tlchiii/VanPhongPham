@model IEnumerable<SanPham>

<div class="row">
    @* @Html.Partial("PartialSanPham", Model) *@

    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="product-item">
                <div class="product-title">
                    <a asp-action="ProductDetail" asp-controller="Home" asp-route-masp="@item.MaSanPham">@item.TenSanPham</a>
                    <div class="ratting">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                    </div>
                </div>
                <div class="product-image">
                    <a href="#">
                        <img src="@Url.Content("../Image/SanPham/" + item.HinhAnhSanPham)" alt="Product Image">
                    </a>
                    <div class="product-action">
                        <a href="#"><i class="fa fa-cart-plus"></i></a>
                        @* <a href="#"><i class="fa fa-heart"></i></a> *@
                        <a asp-action="ProductDetail" asp-controller="Home" asp-route-masp="@item.MaSanPham"><i class="fa fa-search"></i></a>
                    </div>
                </div>
                <div class="product-price">
                    <h3 style="color: #ffffff">@Convert.ToInt32(item.GiaToiDa)<span>đ</span></h3>
                    <a class="btn" href=""><i class="fa fa-shopping-cart"></i>Buy Now</a>
                </div>
            </div>
        </div>

    }

</div>

<!-- Pagination Start -->
<div class="col-md-12">
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= ViewBag.pageNum; i++)
            {
                <li class="page-item active" page="@i"
                @(ViewBag.maloai != null ? "maloai =" + @ViewBag.maloai : "")
                @(ViewBag.TenTK != null ? "tentk =" + @ViewBag.Tentk : "")>
                    <a class="page-link">@i</a>
                </li>
            }
