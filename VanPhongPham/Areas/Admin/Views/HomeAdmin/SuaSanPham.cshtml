@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model VanPhongPham.Models.SanPham

@{
    ViewData["Title"] = "SuaSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="ms-2 mx-2">
    <h3>Sửa sản phẩm</h3>
    <hr />
            <form asp-action="SuaSanPham" asp-controller="HomeAdmin" method="post" class="mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label asp-for="MaSanPham" class="col-sm-2 col-form-label">Mã sản phẩm</label>
                <input type="" asp-for="MaSanPham" readonly/>

                <div style="margin-top:7px" class="form-group row">
                    <label asp-for="TenSanPham" class="col-sm-2 col-form-label">Tên sản phẩm</label>
                    <div class="col-sm-10">
                        <input asp-for="TenSanPham" class="form-control" />
                    </div> 
                    <span asp-validation-for="TenSanPham" class="text-danger"></span>
                </div>

            <div style="margin-top:7px" class="form-group row">
                 <label asp-for="MaLoaiHang" class="col-sm-2 col-form-label">Mã Loại Hàng </label>
                 <div class="col-sm-10">
                     <select asp-for="MaLoaiHang" class="custom-select mr-sm-2" asp-items="@ViewBag.MaLoaiHang"></select>
                 </div>
                 <span asp-validation-for="MaLoaiHang" class="text-danger"></span>
             </div>

             <div style="margin-top:7px" class="form-group row">
                    <label asp-for="GiaToiThieu" class="col-sm-2 col-form-label">Giá tối thiểu</label>
                    <div class="col-sm-10">
                        <input asp-for="GiaToiThieu" class="form-control" />
                    </div>
                    <span asp-validation-for="GiaToiThieu" class="text-danger"></span>
                </div>

            <div style="margin-top:7px" class="form-group row">
                    <label asp-for="GiaToiDa" class="col-sm-2 col-form-label">Giá tối đa</label>
                    <div class="col-sm-10">
                        <input asp-for="GiaToiDa" class="form-control" />
                    </div>    
                    <span asp-validation-for="GiaToiDa" class="text-danger"></span>
                </div>

            <div style="margin-top:7px" class="form-group row">
                    <label asp-for="SoLuongTon" class="col-sm-2 col-form-label">Số lượng kho</label>
                    <div class="col-sm-10">
                        <input asp-for="SoLuongTon" class="form-control" />
                    </div>                  
                    <span asp-validation-for="SoLuongTon" class="text-danger"></span>
                </div>

            <div style="margin-top:7px" class="form-grouprow row ">
                    <label asp-for="HinhAnhSanPham" class="col-sm-2 col-form-label">Ảnh đại diện</label>
                    <div class="col-sm-10">
                        <input asp-for="HinhAnhSanPham" class="form-control">
                    </div>
                    <span asp-validation-for="HinhAnhSanPham" class="text-danger"></span>
                </div>

            <div style="margin-top:7px" class="form-group row">
                    <label asp-for="ChiTiet" class=" col-sm-2 col-form-label">Miêu tả</label>
                    <div class="col-sm-10">
                        <input asp-for="ChiTiet" class="form-control">
                    </div>
                    <span asp-validation-for="ChiTiet" class="text-danger"></span>
                </div>

                <!--BUTTON SAVE-->
                <div style="margin-top:10px" class="form-group row">
                    <div class="col-sm-10">  
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </form>

    <div>
        <a asp-action="DanhMucSanPham">Back to List</a>
    </div>

</div>



